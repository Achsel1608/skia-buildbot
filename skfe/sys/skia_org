server {
    listen      80;
    server_name skiadev.org www.skiadev.org;

    proxy_connect_timeout       5m;
    proxy_send_timeout          5m;
    proxy_read_timeout          5m;
    send_timeout                5m;

    location / {
        proxy_pass http://skia-docs:8000;
    }
}

