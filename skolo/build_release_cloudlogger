#!/bin/bash
# Builds and uploads a debian package for cloudlogger.
APPNAME=cloudlogger
SYSTEMD=""
DESCRIPTION="log the files on the raspberry pi to cloud logging"


# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
INSTALL="sudo install -D --verbose --backup=none --group=root --owner=root"
${INSTALL} --mode=755 -T ./out/${APPNAME}          ${ROOT}/opt/raspberrypi/root/usr/local/bin/${APPNAME}
${INSTALL} --mode=644 -T ./sys/${APPNAME}.service  ${ROOT}/opt/raspberrypi/root/etc/systemd/system/${APPNAME}.service
${INSTALL} --mode=644 -T ./service-account.json    ${ROOT}/opt/raspberrypi/root/opt/service-account.json
}

source ../bash/release.sh