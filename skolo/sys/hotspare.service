[Unit]
Description=Monitors skia-rpi-master and allows for the hotspare to take over
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/local/bin/hotspare --log_dir=/var/log/logserver --virtual_interface "enp5s0:0" --sync_remote_path "chrome-bot@192.168.1.199:/opt/rpi_img/current.img" --service_account_path=/home/chrome-bot/service-account.json
Restart=always
User=chrome-bot
Group=chrome-bot
LimitNOFILE=10000

[Install]
WantedBy=multi-user.target
