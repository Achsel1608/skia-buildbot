#!/bin/bash
# Builds and uploads a debian package for Skolo Prometheus.
APPNAME=prometheus-skolo
DESCRIPTION="Prometheus monitoring and alerting."
SYSTEMD="prometheus-skolo.service jumphost-prom-tunnel.service jumphost-rev-prom-tunnel.service"

set -x -e

# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
INSTALL="sudo install -D --verbose --backup=none --group=root --owner=root"
INSTALL_DIR="sudo install -d --verbose --backup=none --group=root --owner=root"

${INSTALL} --mode=755 -T ${GOPATH}/bin/prometheus               ${ROOT}/usr/local/bin/prometheus
${INSTALL} --mode=755 -T ${GOPATH}/bin/promtool                 ${ROOT}/usr/local/bin/promtool
${INSTALL} --mode=644 -T ./sys/prometheus-skolo.service         ${ROOT}/etc/systemd/system/prometheus-skolo.service
${INSTALL} --mode=644 -T ./sys/jumphost-rev-prom-tunnel.service ${ROOT}/etc/systemd/system/jumphost-rev-prom-tunnel.service
${INSTALL} --mode=644 -T ./sys/jumphost-prom-tunnel.service     ${ROOT}/etc/systemd/system/jumphost-prom-tunnel.service
${INSTALL} --mode=644 -T ./sys/prometheus-skolo.yml             ${ROOT}/etc/prometheus/prometheus.yml

${INSTALL_DIR} --mode=777                                       ${ROOT}/var/prometheus
}

source ../bash/release.sh
