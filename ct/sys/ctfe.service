[Unit]
Description=Cluster Telemetry frontend.
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/local/bin/ctfe --log_dir=/var/log/logserver --resources_dir=/usr/local/share/ctfe/ --port=:80
Restart=always
User=default
Group=default
LimitNOFILE=10000

[Install]
WantedBy=multi-user.target
