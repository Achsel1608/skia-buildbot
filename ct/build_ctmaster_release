#!/bin/bash
# Builds and uploads a debian package for ct_master.
APPNAME=ct-masterd
DESCRIPTION="Application to run the Cluster Telemetry master."
SYSTEMD=${APPNAME}.service

# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
INSTALL="sudo install -D --verbose --backup=none --group=root --owner=root"
INSTALL_DIR="sudo install -d --verbose --backup=none --group=root --owner=root"

# ${INSTALL} --mode=644 -T ./sys/${APPNAME}.service ${ROOT}/etc/systemd/system/${APPNAME}.service
# ${INSTALL} --mode=755 -T ${GOPATH}/bin/poller ${ROOT}/usr/local/bin/ct_poller
# ${INSTALL} --mode=755 -T ${GOPATH}/bin/* ${ROOT}/usr/local/bin/
${INSTALL_DIR} --mode=755 ${ROOT}/mnt/pd0/ct_master_workdir
${INSTALL} --mode=755 -T ./setup_poller ${ROOT}/mnt/pd0/ct_master_workdir/setup_poller
# ${INSTALL_DIR} --mode=755 ${ROOT}/b/storage
}

source ../bash/release.sh
