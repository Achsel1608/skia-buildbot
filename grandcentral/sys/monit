check process grandcentral with pidfile /var/run/grandcentral.pid
   start program = "/etc/init.d/grandcentral start"  with timeout 90 seconds
   stop program = "/etc/init.d/grandcentral stop"
   depends on grandcentral_init
   depends on grandcentral_exe

check file grandcentral_init
  with path /etc/init.d/grandcentral
  if changed timestamp then restart

check file grandcentral_exe
  with path /usr/local/bin/grandcentral
  if changed timestamp then restart
