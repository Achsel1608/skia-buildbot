[Unit]
Description=Skia systemd monitoring UI.
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/local/bin/sksysmon --port=:10116 --log_dir=/var/log/logserver --resources_dir=/usr/local/share/sksysmon/
Restart=always
User=root
Group=root
LimitNOFILE=10000

[Install]
WantedBy=multi-user.target
