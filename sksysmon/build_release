#!/bin/bash
# Builds and uploads a debian package for sksysmon.
APPNAME=sksysmon
SYSTEMD=${APPNAME}.service
DESCRIPTION="Application to view running applications controlled by systemd."

# Copy files into the right locations in ${ROOT}.
copy_release_files()
{
INSTALL="sudo install -D --verbose --backup=none --group=root --owner=root"
${INSTALL} --mode=755 -T ${GOPATH}/bin/sksysmon    ${ROOT}/usr/local/bin/sksysmon
${INSTALL} --mode=644 -T ./sys/${APPNAME}.service  ${ROOT}/etc/systemd/system/${APPNAME}.service
${INSTALL} --mode=644 -T ./res/vul/elements.html   ${ROOT}/usr/local/share/sksysmon/res/vul/elements.html
${INSTALL} --mode=644 -T ./res/js/core.js          ${ROOT}/usr/local/share/sksysmon/res/js/core.js
${INSTALL} --mode=644 -T ./templates/header.html   ${ROOT}/usr/local/share/sksysmon/templates/header.html
${INSTALL} --mode=644 -T ./templates/index.html    ${ROOT}/usr/local/share/sksysmon/templates/index.html
${INSTALL} --mode=644 -T ./templates/titlebar.html ${ROOT}/usr/local/share/sksysmon/templates/titlebar.html
}

source ../bash/release.sh
