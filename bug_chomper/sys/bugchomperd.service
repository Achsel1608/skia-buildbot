[Unit]
Description=BugChomper
Wants=network-online.target
After=network-online.target

[Service]
ExecStart=/usr/local/bin/bug_chomper \
    --use_metadata=true \
    --log_dir=/var/log/logserver \
    --log_max_size=10485760 \
    --host=bugchomper.skia.org \
    --port=:8050 \
    --influxdb_host=skia-monitoring:10117 \
    --influxdb_database=skmetrics \
    --resources_dir=/usr/local/share/bug_chomper/
Restart=always
User=default
Group=default
LimitNOFILE=10000

[Install]
WantedBy=multi-user.target
